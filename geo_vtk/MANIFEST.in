# MANIFEST.in for GeoVTK package
# Specify additional files to include in the source distribution

# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
recursive-include docs *.rst *.md *.txt *.py

# Include example and demo files
recursive-include examples *.py *.txt *.md
recursive-include demos *.py *.txt *.md
include geo_vtk/src/demo_*.py

# Include data files
recursive-include data *.txt *.csv *.json *.asc *.xml
recursive-include geo_vtk/data *.txt *.csv *.json *.asc *.xml *.tif *.vtk

# Include colormap and configuration files
include geo_vtk/src/bgr.json
recursive-include colormaps *.txt *.json

# Include test files
recursive-include tests *.py
recursive-include geo_vtk/src/tests *.py

# Include package configuration
include setup.py
include setup.cfg
include pyproject.toml
include requirements*.txt
include geo_vtk/src/untitled0.yml

# Exclude compiled files and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude .github
exclude .vscode
exclude Makefile
exclude tox.ini

# Include version and metadata files
include versioneer.py
include geo_vtk/src/_version.py